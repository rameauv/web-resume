{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": ["es2020"],
        "types": ["reflect-metadata"],
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/*", "src/Services/Experiences.ts", "src/Services/MongoDbHelper.ts"
    ],
    "exclude": ["dist"]
}